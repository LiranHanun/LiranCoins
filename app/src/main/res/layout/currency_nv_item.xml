<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="4dp"
    app:cardCornerRadius="4dp"
    app:cardElevation="3dp"
    app:cardBackgroundColor="@color/white"
    android:layout_height="wrap_content">


    <RelativeLayout
        android:id="@+id/idRLCurrency"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:background="@null"
            android:layout_centerInParent="true"
            android:layout_marginStart="2dp"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="00dp"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/idTVSymbol"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/logo"
            android:padding="3dp"
            android:text="symbol"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/idTvCurrencyName"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/idTVSymbol"
            android:layout_marginTop="1dp"

            android:layout_toRightOf="@id/logo"
            android:padding="3dp"
            android:text="Name"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/idTvCurrencyRate"
            android:layout_width="95dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="4dp"
            android:layout_toRightOf="@+id/idTVSymbol"
            android:text="Rate"

            android:textColor="@color/black"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/sevendays"
            android:layout_width="52dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="3dp"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="2dp"
            android:layout_marginBottom="2dp"
            android:layout_toRightOf="@+id/idTvCurrencyRate"

            android:textAlignment="center"



            android:textSize="12dp" />

        <TextView
            android:id="@+id/oneday"
            android:layout_width="52dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="1dp"
            android:layout_marginLeft="29dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="1dp"
            android:layout_marginBottom="3dp"
            android:layout_toRightOf="@+id/sevendays"


            android:textAlignment="center"

            android:textSize="12dp" />

        <TextView
            android:id="@+id/hour"
            android:layout_width="52dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="1dp"

            android:layout_marginTop="2dp"
            android:layout_marginEnd="2dp"
            android:layout_marginBottom="2dp"
            android:layout_toRightOf="@+id/oneday"

            android:textAlignment="center"

            android:textSize="12dp" />
    </RelativeLayout>


</androidx.cardview.widget.CardView>